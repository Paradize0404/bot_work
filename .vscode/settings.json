{
  // ──────────────────────────────────────────────
  // Кодировка: всегда UTF-8, никакого авто-угадывания
  // ──────────────────────────────────────────────
  "files.encoding": "utf8",
  "files.autoGuessEncoding": false,

  // ──────────────────────────────────────────────
  // Окончания строк: LF (unix), как в .gitattributes
  // ──────────────────────────────────────────────
  "files.eol": "\n",

  // ──────────────────────────────────────────────
  // Python: форматирование через black
  // ──────────────────────────────────────────────
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },

  // ──────────────────────────────────────────────
  // Показывать кодировку в статус-баре
  // (чтобы сразу видеть, если что-то открылось не в UTF-8)
  // ──────────────────────────────────────────────
  "workbench.statusBar.visible": true
}
